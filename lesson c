задача 6 ##########################################################################################################
/* Необходимо составить функцию, которая определяет, сколько зерен попросил положить на N-ую клетку
изобретатель шахмат (на 1-ую – 1 зерно, на 2-ую – 2 зерна, на 3-ю – 4 зерна, …) */

#include <stdio.h>

int main()
{
    unsigned long long a, k=2, b=0, sum=0;
    scanf("%llu", &a);
    if (a==1)
    {
        printf("1");
    }
    else
    {
        a--;
        for(int i = 1; i < a; i++)

        {
            b=k+k;
            k*=2;
        }
        printf("%llu", k);
    }
    return 0;
}


задача 14 ##########################################################################################################
#include <stdio.h>
/* Составить функцию логическую функцию, которая определяет, верно ли, что сумма его цифр – четное число. Используя эту функцию решить задачу. */

int even(int n)
{
    int b=0, c=0;
    while (n!=0)
    {
        b = n%10;
        c += b;
        n /= 10;
    }
    if (((c%10)%2==1))
    {
        return 0;
    }
    return 1;
}

int main()
{
    int a;
    scanf("%d", &a);

    if (even(a))
    {
        printf("YES");
    }
    else
    {
        printf("NO");
    }

    return 0;
}

задача 15 ##########################################################################################################

/* Составить функцию логическую функцию, которая определяет, верно ли, что в заданном числе все цифры стоят по возрастанию. Используя данную функцию решить задачу.
int grow_up(int n) */ 

#include <stdio.h>

int grow_up(int n)
{
    int b, c;
    while (n/10>0)
    {
        b = n%10;
        c = (n/10)%10;
        if (b<=c)
        {
            return 0;
        }
        n /= 10;
    }
    return 1;
}

int main()
{
    int a;
    scanf("%d", &a);

    if (grow_up(a))
    {
        printf("YES");
    }
    else
    {
        printf("NO");
    }

    return 0;
}
